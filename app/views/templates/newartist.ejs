<!doctype html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <h1>Add a new artist</h1>
    <form action="/artist/new" method="POST" class="newartist-form">
      <div class="ui form">
      <div class="field">
        <label for="name">Name</label>
        <input name="name" type="text" placeholder="name" class="form-control">
      </div>
      <div class="field">
        <label for="genre">Genre</label>
        <input name="genre" type="text" placeholder="genre" class="form-control">
      </div>
      <div class="field">
        <label for="bio">Bio</label>
        <input name="bio" type="text" placeholder="bio" class="form-control">
      </div>
      <button type="submit" value="Submit artist" class="ui button create-artist">Submit</button>
      </div>
    </form>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
