<!doctype html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <h1>Add a new artist.</h1>
    <form action="/artist/create" method="POST">
      <div class="form-group col-sm-8">
      <label for="name">Name</label>
      <input name="name" type="text" placeholder="name" class="form-control">
      <label for="genre">Genre</label>
      <input name="genre" type="text" placeholder="genre" class="form-control">
      <label for="bio">Bio</label>
      <input name="bio" type="text" placeholder="bio" class="form-control">
      <button type="submit" value="Submit artist" class="btn btn-default create-artist">Submit</button>
      </div>
    </form>
  </body>
</html>
